{
  "name": "alexa-serverless-skill-scaffold",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "eslint": "3.12.2",
    "eslint-config-google": "0.7.1",
    "eslint-friendly-formatter": "2.0.6",
    "eslint-plugin-node": "3.0.5",
    "jest": "18.0.0",
    "lambda-local": "1.3.0",
    "webpack": "1.14.0",
    "yarn-run-all": "3.1.1"
  },
  "dependencies": {
    "alexa-sdk": "1.0.6"
  },
  "scripts": {
    "lint": "eslint src/**/*.js test/**/*.js",
    "lint:verbose": "yarn run lint -- --format 'node_modules/eslint-friendly-formatter'",
    "test": "jest",
    "deploy": "serverless deploy",
    "predeploy": "npm-run-all lint test prune",
    "postdeploy": "yarn install --force",
    "prune": "npm prune --production"
  },
  "jest": {
    "bail": true,
    "verbose": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ],
    "testPathDirs": [
      "test/unit",
      "test/integration"
    ]
  }
}
